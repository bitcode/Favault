{
  "manifest_version": 3,
  "name": "FaVault - Custom New Tab",
  "version": "1.0.0",
  "description": "A custom, visually appealing new tab page with organized bookmarks and search functionality",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "bookmarks",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "chrome-extension://*/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'unsafe-inline' 'unsafe-eval'; object-src 'self'; style-src 'self' 'unsafe-inline';"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "commands": {
    "toggle-search": {
      "suggested_key": {
        "default": "Ctrl+F",
        "mac": "Command+F"
      },
      "description": "Focus search input"
    },
    "toggle-edit-mode": {
      "suggested_key": {
        "default": "Ctrl+E",
        "mac": "Command+E"
      },
      "description": "Toggle edit/settings mode"
    }
  }
}
