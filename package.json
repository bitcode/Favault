{
  "name": "favault-extension",
  "version": "1.0.0",
  "description": "A custom, visually appealing new tab page with organized bookmarks and search",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:chrome": "vite build --mode chrome",
    "build:firefox": "vite build --mode firefox",
    "build:safari": "vite build --mode safari",
    "build:edge": "vite build --mode edge",
    "build:brave": "vite build --mode brave",
    "build:all": "node scripts/build.js all",
    "create-icons": "node scripts/create-icons.js",
    "dev:extension": "node scripts/dev-build.js",
    "build:watch": "vite build --watch",
    "test:dragdrop-manual": "echo 'Open extension and run: runAllTests()'",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:bookmarks": "playwright test tests/playwright/specs/bookmark-management.test.ts",
    "test:dragdrop": "playwright test tests/playwright/specs/dragdrop-functionality.test.ts",
    "test:ui-visual": "playwright test tests/playwright/specs/ui-components-visual.test.ts",
    "test:console": "playwright test tests/playwright/specs/console-network-testing.test.ts",
    "test:cross-browser": "playwright test tests/playwright/specs/cross-browser-compatibility.test.ts",
    "test:dragdrop-position": "./scripts/run-dragdrop-position-tests.sh",
    "test:position-validation": "playwright test --project=chrome-extension tests/playwright/specs/dragdrop-position-validation.test.ts",
    "test:insertion-points": "playwright test --project=chrome-extension tests/playwright/specs/dragdrop-insertion-point-validation.test.ts",
    "test:automated": "playwright test tests/",
    "test:position": "playwright test tests/position-accuracy.test.js",
    "test:ui-refresh": "playwright test tests/ui-refresh.test.js",
    "test:drop-zone": "playwright test tests/drop-zone.test.js",
    "test:cross-browser-new": "playwright test tests/cross-browser.test.js",
    "test:quick": "playwright test --grep=\"should accurately position folders\"",
    "test:demo": "node test-demo.js",
    "test:simple": "node test-simple.js",
    "test:playwright-demo": "node test-basic-playwright.js",
    "test:automated-runner": "node run-automated-tests.js",
    "test:logged": "node run-logged-tests.js",
    "test:analyze": "node analyze-test-feedback.js",
    "test:dev-loop": "npm run test:logged && npm run test:analyze",
    "test:logging-demo": "node test-logging-demo.js",
    "test:extension-full": "node test-extension-with-logs.js",
    "test:powershell": "powershell -ExecutionPolicy Bypass -File run-tests.ps1",
    "test:build-and-validate": "npm run build:chrome && npm run test:simple",
    "test:chrome": "playwright test --project=chromium-extension",
    "test:edge": "playwright test --project=edge-extension",
    "test:firefox": "playwright test --project=firefox-extension",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "test:build-and-test": "npm run build:chrome && npm run test",
    "test:ci": "npm run build:chrome && playwright test --reporter=github",
    "test:coverage": "playwright test --reporter=html,json,junit"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@types/webextension-polyfill": "^0.10.0",
    "svelte": "^4.0.0",
    "svelte-check": "^3.0.0",
    "svelte-preprocess": "^5.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "webextension-polyfill": "^0.10.0"
  }
}
